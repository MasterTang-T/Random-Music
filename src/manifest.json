{
  "author": "MasterTang",
  "name": "Random Music",
  "description": "随机播放一首音乐，体验不一样的感觉",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/icon19.png",
      "38": "icons/icon38.png"
    },
    "default_title": "Random Music",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "jquery.js",
      "background.js"
    ]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "storage"
  ]
}